# terminal
set -U SXHKD_SHELL /usr/bin/bash
super + Return
	kitty

# Floating terminal
super + shift + Return
  kitty --class floating_term

# program launcher
super + d
  rofi -modi run,drun -show drun -display-drun 'Applications' -location 1 -xoffset 12 -yoffset 48 -line-padding 4 -columns 2 -width 99 -lines 5 -padding 25 -hide-scrollbar -show-icons -drun-icon-theme 'Papirus' -font 'Iosevka Nerd Font 9'

# Window switch
super + w
  rofi -modi window -show window -hide-scrollbar -padding 20 -yoffset -300 -line-padding 4 -width 25 -lines 6 -font 'Iosevka Nerd Font 9'

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd && sxhxd

# quit/restart bspwm
super + shift + r
	bspc wm -r

# close and kill
super + {_,shift + }q
	bspc node -{k,c}

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local;
shift
# swap the current node and the biggest node
super + shift + g
	bspc node -s biggest

# search bar
#super + g
#  ~/.config/bspwm/scripts/search

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + m
    bspc desktop -l next

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

super + shift + p
  ~/.config/bspwm/scripts/power

super + ctrl + p
  pavucontrol

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9, 0}
	bspc {desktop -f,node -d} {I, II, III, IV, X, VI, VII, VIII, IX, V}

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Gimmicks

#super + ctrl + t
#  ~/.config/bspwm/scripts/tmxui

# super + 1
#  discord

# super + shift + 3
#  kitty --class floating_term -e 'ranger'

super + alt + 3
  kitty -e ranger

super + shift + 4
  kitty --class floating_term -e gotop

super + 4
  kitty -e gotop

super + shift + 5
  kitty -e spt

super + alt + 5
  kitty -e ncmpcpp

super + Print
  scrot -u -b -e 'xclip -selection c -t image/png < $f' && notify-send 'Window captured.'

Print
  scrot -e 'xclip -selection c -t image/png < $f' && notify-send 'Screenshot captured.'

super + ctrl + Print
  flameshot gui

super + v
  kitty -e nvim

super + shift + v
  codium

super + shift + d
  discord

#super + ctrl + v
#  kitty -e vim

super + z
  zathura

#Jsuper + e
#  emacs

XF86AudioPlay
  playerctl play-pause

XF86AudioPause
  playerctl play-pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous

XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioRaiseVolume
  /usr/bin/pulseaudio-ctl up
  #amixer -q set Master 2%+ unmute
  #pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
  /usr/bin/pulseaudio-ctl down
  #amixer -q set Master 2%- unmute
  #pactl set-sink-volume @DEFAULT_SINK@ -5%

#super + m
#  ~/.config/bspwm/scripts/mpc_rof

#super + n
#  notion-app-nativefier

super + shift + b
  systemctl suspend
